<div id="my-or-all-challenges-info" class="content">
    <br />
    <div class="col-sm-12">
    <h1 style="font-weight:300; color:#777; margin-top: 25px;">Code Challenge Folders</h1>
    <div class="btn-group" style="float:left; text-align:center; margin-bottom: 15px">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Choose A Language <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><a href="#">Javascript</a></li>
      <li role="separator" class="divider"></li>
      <li><a href="#">Python</a></li>
      <li role="separator" class="divider"></li>
      <li><a href="#">Ruby</a></li>
    </ul>
    </div>
    <button id="view-my-challenges" class="btn btn-default" style="float:right; text-align:center; margin-bottom: 15px"><span class="glyphicon glyphicon-folder-open"></span>&nbsp; My Challenges</button>
<button id="view-all-challenges" class="btn btn-default dropdown-toggle" style="float:right; text-align:center; margin-bottom: 15px"><span class="glyphicon glyphicon-folder-open"></span>&nbsp; All Challenges</button>
    <table id="my-or-all-challenges-table" class="table table-striped table-bordered table-hover table-responsive table-condensed assists-data col-xs-12">
      <tr>
        <th class="content-cell content-header col-xs-3" data-id={{id}}>Challenge</th>
        <th class="content-cell content-header col-xs-2" data-id={{id}}>Language</th>
        <th class="content-cell content-header col-xs-4" data-id={{id}}>Description</th>
        <th class="content-cell content-header col-xs-1" data-id={{id}}>Select</th>
        <th class="content-cell content-header col-xs-1" data-id={{id}}>Submissions</th>
        <th class="content-cell content-header col-xs-1" data-id={{id}}>Delete</th>
      </tr>
      {{#each challenges}}
        <tr>
          <td class="standings-cell standings-row col-xs-3" data-id={{id}}>{{name}}</td>
          <td class="standings-cell standings-row col-xs-2" data-id={{id}}>{{language}}</td>
          <td class="standings-cell standings-row col-xs-4" data-id={{id}}>{{description}}</td>
          <td id="show-challenge" class="standings-cell standings-row col-xs-1" data-id={{_id}} style="padding-top: 20%; color:#000">
            <span style="color:black" class="glyphicon glyphicon-new-window select-challenge"></span>
          </td>
          <td class="standings-cell standings-row col-xs-1" data-id={{_id}}>Coming Soon</td>
          <td class="delete-challenge standings-cell standings-row col-xs-1" style="padding-top: 2%" data-id={{_id}}>
            <span style="color:black" class="glyphicon glyphicon-trash"></span>
          </td>
        </tr>
      {{/each}}
    </table>
</div>
</div>
